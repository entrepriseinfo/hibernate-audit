<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="hibernate.connection.driver_class">${hibernate.connection.driver_class}</property>
		<property name="hibernate.connection.url">${hibernate.connection.url}</property>
		<property name="hibernate.connection.username">${hibernate.connection.username}</property>
		<property name="hibernate.connection.password">${hibernate.connection.password}</property>
		<property name="hibernate.dialect">${hibernate.dialect}</property>

        <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.transaction.flush_before_completion">true</property>

        <property name="hibernate.cache.provider_class">${hibernate.cache.provider_class}</property>
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hibernate.cache.use_query_cache">false</property>
        <property name="hibernate.show_sql">${hibernate.show_sql}</property>
        <property name="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</property>
        <property name="hibernate.jdbc.batch_size">10</property>

        <!--
            Audit static stuff, this must go away with https://jira.novaordis.org/browse/HBA-16
            and https://jira.novaordis.org/browse/HBA-17.
        -->

        <mapping class="com.googlecode.hibernate.audit.model_obsolete.clazz.AuditClass"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.clazz.AuditClassProperty"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.AuditOperation"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.AuditTransactionObsolete"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.AuditTransactionComponentRecord"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.AuditTransactionEntityRecord"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.AuditTransactionRecord"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.AuditTransactionRecordField"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.AuditTransactionRecordFieldComponentReferenceValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.AuditTransactionRecordFieldEntityReferenceValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.AuditTransactionRecordFieldSimpleValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.AuditTransactionRecordFieldValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.value.AuditValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.value.ComponentReferenceAuditValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.value.EntityReferenceAuditValue"/>
        <mapping class="com.googlecode.hibernate.audit.model_obsolete.transaction.record.field.value.SimpleAuditValue"/>

        <mapping class="com.googlecode.hibernate.audit.model2.AuditTransaction2"/>

        <event type="post-collection-remove">
			<listener class="com.googlecode.hibernate.audit.event.AuditPostCollectionRemoveEventListener" />
        </event>
		<event type="post-collection-update">
			<listener class="com.googlecode.hibernate.audit.event.AuditPostCollectionUpdateEventListener" />
		</event>
		<event type="post-collection-recreate">
			<listener class="com.googlecode.hibernate.audit.event.AuditPostCollectionRecreateEventListener" />
		</event>
	    <event type="post-delete">
            <listener class="com.googlecode.hibernate.audit.event.AuditPostDeleteEventListener" />
        </event>
        <event type="post-update">
            <listener class="com.googlecode.hibernate.audit.event.AuditPostUpdateEventListener" />
        </event>
        <event type="post-insert">
            <listener class="com.googlecode.hibernate.audit.event.AuditPostInsertEventListener" />
        </event>

    </session-factory>

</hibernate-configuration>
